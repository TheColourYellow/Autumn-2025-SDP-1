<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="200.0" prefWidth="215.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group9.controller.BookAttributeController">
   <children>
      <Label fx:id="nameLabel" layoutX="30.0" layoutY="28.0" text="Name" />
      <Label fx:id="descLabel" layoutX="30.0" layoutY="78.0" text="Description" />
      <TextField fx:id="nameTextField" layoutX="30.0" layoutY="45.0" />
      <TextField fx:id="descTextField" layoutX="30.0" layoutY="95.0" />
      <Button fx:id="addBtn" layoutX="160.0" layoutY="161.0" mnemonicParsing="false" onMouseClicked="#handleSave" text="Add" />
      <Button fx:id="cancelBtn" layoutX="14.0" layoutY="161.0" mnemonicParsing="false" onMouseClicked="#handleClose" text="Cancel" />
      <Button fx:id="deleteBtn" layoutX="105.0" layoutY="161.0" mnemonicParsing="false" onMouseClicked="#handleDelete" text="Delete" />
   </children>
</AnchorPane>
